<div class="container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 class="post-title"><%= post.title %></h1>
          <div class="meta-data">
            <p><%= post.created_at.strftime('%e %b %Y') %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p>
            <%= post.body %>
          </p>
        </div>
      </div>
    </div>
    <hr />
  <% end %>
</div>
